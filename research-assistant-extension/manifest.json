{
	"manifest_version": 3,
	"name": "Research Assistant",
	"version": "1.0.0",
	"description": "AI-powered research workspace with intelligent task management, note-taking, and productivity tracking",
	"permissions": [
		"storage",
		"tabs",
		"tabGroups",
		"history",
		"activeTab",
		"scripting",
		"sidePanel",
		"alarms",
		"contextMenus",
		"webNavigation",
		"idle"
	],
	"host_permissions": ["<all_urls>"],
	"background": {
		"service_worker": "background/service-worker.js",
		"type": "module"
	},
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"exclude_matches": [
				"*://*.youtube.com/*",
				"*://youtube.com/*",
				"*://mail.google.com/*",
				"*://chatgpt.com/*",
				"*://localhost/*",
				"*://127.0.0.1/*",
				"*://0.0.0.0/*",
				"*://[::1]/*",
				"*://*/*.pdf"
			],
			"js": ["lib/storage.js", "content/content-script.js"],
			"css": ["content/content-styles.css"],
			"run_at": "document_idle"
		}
	],
	"action": {
		"default_popup": "popup/popup.html",
		"default_icon": {
			"16": "icons/icon16.png",
			"32": "icons/icon32.png",
			"48": "icons/icon48.png",
			"128": "icons/icon128.png"
		}
	},
	"icons": {
		"16": "icons/icon16.png",
		"32": "icons/icon32.png",
		"48": "icons/icon48.png",
		"128": "icons/icon128.png"
	},
	"web_accessible_resources": [
		{
			"resources": [
				"content/*.html",
				"content/*.css",
				"content/*.js",
				"icons/*.png",
				"lib/*.js"
			],
			"matches": ["<all_urls>"]
		}
	],
	"commands": {
		"_execute_action": {
			"suggested_key": {
				"default": "Ctrl+Shift+R",
				"mac": "Command+Shift+R"
			}
		},
		"toggle-notes-sidebar": {
			"suggested_key": {
				"default": "Ctrl+Shift+N",
				"mac": "Command+Shift+N"
			},
			"description": "Toggle notes sidebar"
		},
		"quick-save": {
			"suggested_key": {
				"default": "Ctrl+Shift+S",
				"mac": "Command+Shift+S"
			},
			"description": "Quick save current page"
		},
		"open-workspace": {
			"suggested_key": {
				"default": "Ctrl+Shift+W",
				"mac": "Command+Shift+W"
			},
			"description": "Open research workspace"
		}
	}
}
